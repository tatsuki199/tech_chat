<div class="new-main">
  <div class="form_box">
    <div class="box-top"></div>
    <div class="form">
      <%= form_with(model: @post, local: true) do | form| %>
        <div class="input-items">
          <div class="form_title">
            <%= form.text_field :title, placeholder: "タイトル" %>
          </div>
          <div class= "form_question">
            <%= form.text_area :question, placeholder: "質問内容" %>
          </div>
          <div class="form_name">
            <%= form.text_field :name, placeholder: "投稿者名" %>
          </div>
          <div class="submit">
            <%= form.submit "POST" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>