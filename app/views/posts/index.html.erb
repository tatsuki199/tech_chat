<header>
  <div class="hed_left">TechChat</div>
  <div class="hed_right"> <%= link_to "投稿ページ", "/posts/new" %> </div>
</header>
<% @posts.each do |post| %>
  <div class="text_box">
    <div class="title">タイトル：<%= post.title%> 
    </div>
    <div class="question">内容：<%= post.question %>
    </div>
    <div class="name">投稿者名:<%= post.name %>
    </div>
  </div>
<% end %>
